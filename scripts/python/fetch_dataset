#!/usr/bin/env python3
# Command line for script 
"""
:param str target_directory: Download directory

:param str cache_path: Path to cache file
"""
import argparse
from pipeline.steps.fetch_dataset import fetch_dataset

if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Command for script fetch_dataset')
    parser.add_argument('--target-directory', type=str, 
            required=True, help="Download directory")
    parser.add_argument('--cache-path', type=str, 
            required=True, help="Path to cache file")
    args = parser.parse_args()

    fetch_dataset(args.target_directory, args.cache_path)